# =============================================================================
# AKSA Backend - Docker Environment Configuration
# =============================================================================
# Copy this file to .env before running docker-compose up
# Command: cp .env.docker .env
# =============================================================================

APP_NAME="AKSA Employee Management"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://your-vps-ip:8000

# Port yang diexpose ke host (default 8000)
APP_PORT=8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =============================================================================
# Database - sesuaikan password!
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=aksa_be
DB_USERNAME=aksa_user
DB_PASSWORD=aksa_password
DB_ROOT_PASSWORD=rootpassword

# Port MySQL di host (untuk akses dari luar container, misal DBeaver)
DB_EXTERNAL_PORT=3307

# =============================================================================
# Session & Cache
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
QUEUE_CONNECTION=database
FILESYSTEM_DISK=local
BROADCAST_CONNECTION=log

# =============================================================================
# Sanctum - PENTING untuk Next.js frontend
# =============================================================================
# Ganti dengan domain frontend kamu (pisahkan dengan koma jika lebih dari 1)
SANCTUM_STATEFUL_DOMAINS=localhost:3000,your-frontend-domain.com
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Mail (opsional - set jika butuh kirim email)
# =============================================================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@aksa.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
